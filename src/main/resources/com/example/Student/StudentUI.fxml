<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="605.0" prefWidth="1183.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Student.StudentUI">
<columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
</columnConstraints>
<rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
</rowConstraints>

<TableView fx:id="studentTable" prefHeight="200.0" prefWidth="592.0">
    <columns>
        <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
        <TableColumn fx:id="firstNameColumn" prefWidth="75.0" text="First Name" />
        <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="Last Name" />
        <TableColumn fx:id="emailColumn" prefWidth="75.0" text="Email" />
        <TableColumn fx:id="phoneColumn" prefWidth="75.0" text="Phone" />
        <TableColumn fx:id="enrollmentDateColumn" prefWidth="75.0" text="Enrollment Date" />
        <TableColumn fx:id="programColumn" prefWidth="75.0" text="Program" />
    </columns>
</TableView>

<Button mnemonicParsing="false" onAction="#addStudent" text="Add" GridPane.columnIndex="1" />
<Button mnemonicParsing="false" onAction="#updateStudent" text="Update" GridPane.columnIndex="1" GridPane.rowIndex="2" />
<Button mnemonicParsing="false" onAction="#deleteStudent" text="Delete" GridPane.columnIndex="1" GridPane.rowIndex="1" />
</GridPane>
